---
const { lang, t } = Astro.props;

const projects =
  lang === "es"
    ? (await import("../data/projects/es.json")).default
    : (await import("../data/projects/en.json")).default;
---

<section id="projects">
  <h2>{t.projects.title}</h2>

  <ul class="projects-list">
    {projects.map((project, index) => (
      <li class="project-card" data-index={index}>
        <!-- MEDIA -->
        <div class="project-media">
          <a
            href={project.demo}
            target="_blank"
            rel="noopener"
            class="project-overlay-link"
            aria-label={`Open demo of ${project.title}`}
          >
            <video
              class="project-video"
              muted
              loop
              playsinline
              preload="metadata"
              poster={project.thumbnail ?? "/gifs/default-thumb.webp"}
              data-src={project.video}
            ></video>

            <span class="project-cta">
              {lang === "es" ? "Abrir demo ↗" : "Open demo ↗"}
            </span>
          </a>

          <!-- Progress bar -->
          <div class="progress-bar">
            <div class="progress-fill"></div>
          </div>
        </div>

        <!-- CONTENT -->
        <div class="project-content">
          <h3>{project.title}</h3>
          <p>{project.description}</p>

          <p class="project-tech">
            <strong>Tech:</strong> {project.tech.join(", ")}
          </p>

          <p class="project-result">
            <strong>Result:</strong> {project.result}
          </p>
        </div>
      </li>
    ))}
  </ul>
</section>

<style>
/* MEDIA */
.project-media {
  position: relative;
  width: 340px;
  height: 190px;
  border-radius: 12px;
  overflow: hidden;
  background: var(--chip);
}

.project-overlay-link {
  position: relative;
  display: block;
  width: 100%;
  height: 100%;
}

.project-video {
  width: 100%;
  height: 100%;
  object-fit: cover;
  display: block;
  pointer-events: none;
}

/* CTA */
.project-cta {
  position: absolute;
  bottom: 14px;
  right: 14px;
  font-size: 0.75rem;
  padding: 6px 10px;
  border-radius: 999px;
  background: rgba(0, 0, 0, 0.55);
  color: #fff;
  opacity: 0;
  transform: translateY(4px);
  transition: opacity 0.2s ease, transform 0.2s ease;
  pointer-events: none;
}

/* Desktop hover */
.project-media:hover .project-cta {
  opacity: 1;
  transform: translateY(0);
}

/* Mobile active */
.project-card.is-active .project-cta {
  opacity: 1;
  transform: translateY(0);
}

/* PROGRESS BAR */
.progress-bar {
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
  width: calc(110% - 24px);
  height: 5px;
  border-radius: 999px;
  overflow: hidden;
  pointer-events: none;
  backdrop-filter: blur(4px);
}

.progress-fill {
  height: 100%;
  width: 0%;
  background: var(--border);
  border-radius: inherit;
  transition: width 0.12s linear;
}
</style>

<script>
function initProjectVideos() {
  const cards = document.querySelectorAll(".project-card");
  const isMobile = window.innerWidth <= 768;

  let active = {
    card: null,
    video: null,
    progress: null,
    timer: null
  };

  const delay = 1000;
  const intervalTime = 20;
  const increment = (intervalTime / delay) * 100;

  function resetActive() {
    if (!active.card) return;

    clearInterval(active.timer);
    active.progress.style.width = "0%";
    active.video.pause();
    active.video.currentTime = 0;
    active.card.classList.remove("is-active");

    active = { card: null, video: null, progress: null, timer: null };
  }

  function start(card) {
    if (active.card === card) return;

    resetActive();

    const video = card.querySelector("video");
    const progress = card.querySelector(".progress-fill");
    if (!video || !progress) return;

    if (!video.src) video.src = video.dataset.src;
    video.load();

    card.classList.add("is-active");

    let progressValue = 0;
    progress.style.width = "0%";

    active = {
      card,
      video,
      progress,
      timer: setInterval(() => {
        progressValue += increment;

        if (progressValue >= 100) {
          progressValue = 100;
          clearInterval(active.timer);
          video.currentTime = 0;
          video.play().catch(() => {});
        }

        progress.style.width = progressValue + "%";
      }, intervalTime)
    };
  }

  /* ======================
     DESKTOP (hover media)
  ====================== */
  if (!isMobile) {
    document.querySelectorAll(".project-media").forEach((media) => {
      const card = media.closest(".project-card");

      media.addEventListener("mouseenter", () => start(card));
      media.addEventListener("mouseleave", resetActive);
    });
    return;
  }

  /* ======================
     MOBILE (tap card)
  ====================== */
  cards.forEach((card) => {
    card.addEventListener("click", (e) => {
      const link = e.target.closest("a");

      // If demo button tapped and card is active → allow navigation
      if (link && card.classList.contains("is-active")) return;

      // First tap anywhere = preview
      if (!card.classList.contains("is-active")) {
        e.preventDefault();
        start(card);
      }
    });
  });
}

document.addEventListener("astro:page-load", initProjectVideos);
document.addEventListener("DOMContentLoaded", initProjectVideos);
</script>

